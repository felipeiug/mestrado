{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Tests Python",
            "type": "shell",
            "command": "${workspaceFolder}/libs/Scripts/python.exe", // Caminho do Python no venv
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-v",
                "--tb=short"
                // "--cov=app",
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "options": {
                "env": {
                    "PYTHONPATH": "${workspaceFolder}" // Adiciona o diret√≥rio raiz ao PYTHONPATH
                }
            }
        }
    ]
}